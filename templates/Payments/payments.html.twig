{% block body %} <h1>Payments</h1>
    <table class = "table table-hover"> 
        <thead>
            <tr>
                <th>#</th>
                <th>checkNumber</th>
                
                <th>amount</th>
                <th>Editar</th>
                <th>Eliminar</th>
